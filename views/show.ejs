<% include ./partials/header %>

<div class="ui main text segment container">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="content">
                <p><%= blog.body %></p>
            </div>
        </div>
        <a href="/blogs" class="ui primary basic button">Go Back</a>
        <a href="/blogs/<%= blog._id %>/edit" class="ui yellow inverted button">Update Blog</a>
        <form id="delete" action="/blogs/<%= blog._id %>/?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete Post</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>