<% include partials/header %>

<div class="ui main text segment container">
    <div class="ui huge header">Edit Post: <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Description</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        
        <input type="submit" class="ui violet inverted button">
    </form>
</div>

<% include partials/footer %>